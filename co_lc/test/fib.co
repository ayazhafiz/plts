let rec fib = \n ->
#       ^^^
  yield;
  if n < 2
  then n
  else (fib (n - 1)) + (fib (n - 2))
in

let rec exec = \state ->
#       ^^^^
  stat state.0
#      ^^^^^
  | `Pending ->
    let fib1 = resume state.0 in
#                     ^^^^^^^
    exec {fib1, 0, state.2 + 1}
  | `Done n -> {state.0, n, state.2}

in
let runFib = spawn (fib 5) in
let result = exec {runFib, 0, 0} in
#   ^^^^^^
{result.1, result.2}

